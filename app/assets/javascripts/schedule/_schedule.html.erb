<div class="row h2">

  <div class="col-xs-2 text-left">
    <a role="button" ng-click="prevDay()">
      <span class="fa fa-chevron-left"></span>
    </a> 
  </div>
  <div class="col-xs-8 text-center">
    {{localDate | saddleLongDate}}
  </div>
  <div class="col-xs-2 text-right">
    <a role="button" ng-click="nextDay()">
      <span class="fa fa-chevron-right"></span>
    </a> 
  </div>
</div>

<div class="row clearfix">
  <a ui-sref="outings-new({date:'{{localDate.asStr}}'})" class="btn btn-primary pull-right">
    <span class="fa fa-fw fa-plus"></span>Excursi√≥
  </a>
</div>

<div class="row outing" ng-class="{'outing-confirmed': outing.confirmed}" ng-repeat-start="outing in day.outings">
  <div class="col-sm-12 clearfix">
    <span class="h3">
      {{outing.time}} {{outing.name}}
    </span>
    <div class="pull-right">
        <span class="h3">
          {{reservedPlaces(outing)}} / {{numAvailableHorses}}
        </span>
        <button class="btn btn-link" ng-show="!outing.confirmed"><span class="fa fa-fw fa-check"/></button>
        <button class="btn btn-link" ui-sref="outings-edit({id:{{outing.id}}})"><span class="fa fa-fw fa-pencil"/></button>
        <button class="btn btn-link" ui-sref="outings-delete({id:{{outing.id}}})"><span class="fa fa-fw fa-trash"/></button>
    </div>
  </div>

</div>
<div class="row">
  <div class="col-xs-12 text-right">
    <a role="button" ui-sref="addReservation({day:day, outing: outing})">
        <span class="fa fa-plus"></span> Reserva
    </a>
  </div>
</div>
<hr  ng-repeat-start="reservation in outing.reservations" class="reservationSeparator"/>
<div class="row" ng-repeat-end>
  <div class="col-xs-6 col-sm-2">{{reservation.numPersons}}</div>
  <div class="col-xs-6 col-sm-3">
    <span ng-repeat="customerSkillLevel in reservation.customerSkillLevels">
      <span ng-show="reservation.customerSkillLevels.length > 1">
        {{customerSkillLevel.numPersons}}
      </span>
      {{customerSkillLevel.skillLevel}}
      <span ng-show="!$last"> /</span>
    </span>
  </div>
  <div class="col-sm-3">{{reservation.name}}</div>
  <div class="col-sm-3">
    {{reservation.phone}}
    <% if false %>
    <a href="tel:{{reservation.phone}}"><span class="fa fa-phone"></span></a>
    <a href="skype:{{reservation.phone}}"><span class="fa fa-skype"></span></a>
    <% end %>
  </div>
  <div class="col-sm-1 text-right">
    <a role="button" ui-sref="editReservation({day:day, outing: outing, reservation: reservation})">
      <span class="fa fa-pencil"></span>
    </a>
  </div>
</div>
<div class="row" ng-repeat-end></div>


