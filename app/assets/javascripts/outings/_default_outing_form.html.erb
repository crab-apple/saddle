
<form novalidate ng-submit="submit()" ng-class="{'atmp-submit': atmpSubmit}" class="form-horizontal" name="new_defout_form">

  <%= bs_fg_begin 'defout-new-time', 'Hora' %>
    <input ng-model="defaultOuting.time" class="form-control" type="text" id="defout-new-time" saddle-validate-time>
  <%= bs_fg_end %>

  <%= bs_fg_begin 'defout-new-name', 'Nom' %>
    <input required ng-model="defaultOuting.name" class="form-control" type="text" id="defout-new-name">
  <%= bs_fg_end %>

  <%= bs_fg_begin 'defout-new-price-adult', 'Preu adult' %>
    <input required ng-model="defaultOuting.priceAdult" saddle-money-input class="form-control" type="text" id="defout-new-price-adult">
  <%= bs_fg_end %>

  <%= bs_fg_begin 'defout-new-price-child', 'Preu nen' %>
    <input required ng-model="defaultOuting.priceChild" saddle-money-input class="form-control" type="text" id="defout-new-price-child">
  <%= bs_fg_end %>

  <%= bs_fg_begin 'defout-new-from', 'Des de' %>
    <div class="form-inline">
      <div class="checkbox">
        <label>
          <input type="radio" ng-model="dateControlsFrom.radio" value="always"/> Sempre
        </label>
      </div>
      <div class="checkbox">
        <label>
          <input type="radio" ng-model="dateControlsFrom.radio" value="date"/> Data
        </label>
      </div>
      <span class="input-group valign-middle" ng-style="{'visibility': (dateControlsFrom.radio == 'date') ? 'visible':'hidden'}">
        <input type="text" class="form-control" uib-datepicker-popup="dd MMMM yyyy" ng-model="dateControlsFrom.val" is-open="dateControlsFrom.datePopupIsOpen" datepicker-options="dateOptions"/>
        <span class="input-group-btn">
          <button type="button" class="btn btn-default" ng-click="dateControlsFrom.openDatePopup()"><i class="glyphicon glyphicon-calendar"></i></button>
        </span>
      </span>
    </div>
  <%= bs_fg_end %>

  <%= bs_fg_begin 'defout-new-to', 'Fins a' %>
  <div class="form-inline">
    <div class="checkbox">
      <label>
        <input type="radio" ng-model="dateControlsTo.radio" value="always"/> Sempre
      </label>
    </div>
    <div class="checkbox">
      <label>
        <input type="radio" ng-model="dateControlsTo.radio" value="date"/> Data
      </label>
    </div>
      <span class="input-group valign-middle" ng-style="{'visibility': (dateControlsTo.radio == 'date') ? 'visible':'hidden'}">
        <input type="text" class="form-control" uib-datepicker-popup="dd MMMM yyyy" ng-model="dateControlsTo.val" is-open="dateControlsTo.datePopupIsOpen" datepicker-options="dateOptions"/>
        <span class="input-group-btn">
          <button type="button" class="btn btn-default" ng-click="dateControlsTo.openDatePopup()"><i class="glyphicon glyphicon-calendar"></i></button>
        </span>
      </span>
  </div>
  <%= bs_fg_end %>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10 text-right">
      <button type="button" ui-sref="defaultOutings-list" class="btn btn-default">CancelÂ·lar</button>
      <button type="submit" class="btn btn-primary">Acceptar</button>
    </div>
  </div>
</form>
