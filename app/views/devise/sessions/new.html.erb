<%= render :layout => '/layouts/panel', locals: {cols: 6} do %>

    <div id="login-form-container">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: "form" }) do |f| %>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: t('email') %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: t('password') %>
        </div>
        <%= f.submit  t('devise.sessions.new.sign_in', :default => "Sign in"), class: "btn btn-primary form-control"%>
        <% if devise_mapping.rememberable? %>
            <div class="checkbox align-right">
              <label>
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me, t(:remember_me) %>
              </label>
            </div>
        <% end %>
      <% end %>
    </div>
<% end %>
