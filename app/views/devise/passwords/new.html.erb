
<%= render :layout => '/layouts/panel', locals: {cols: 6} do %>

  <div id="login-form-container">

    <% resource.errors.full_messages.each do |msg| -%>
        <div class="form-group">
          <%= content_tag :p, msg, class: 'text-danger' %>
        </div>
    <% end -%>
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, role: "form" }) do |f| %>
        <div class="form-group">
          <p class="form-control-static">
            <%= t('devise.passwords.new.send_me_reset_password_instructions', :default => "Send me reset password instructions") %>
          </p>
        </div>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: t('email') %>
      </div>

      <div class="form-group">
        <%= f.submit t('send', :default => "Send"), class: "btn btn-primary form-control" %>
      </div>

      <p class='align-right'>
        <%= render 'devise/shared/links' %>
      </p>
    <% end %>
  </div>

<% end %>
